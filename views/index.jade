extends layout

block content
    .container#automation-main(class=admin?'admin':'')
        #menu-header
            img(src="/assets/images/profile-icon.png")
            div.drop
                i.fa.fa-caret-down
                .items
                    p Hi, #{name}
                    p
                        a(href='/profile')="Edit Profile"
                    p
                        a(href='/logout')="Logout"
        .row
            .col
                h1#automation-title= "Systems"
            .col
                include automation-action-buttons.html
            .col
                button#create-auto-row.btn.btn-primary="Create Row"
        p="Select one or more systems from the list below:"
        .container
            .row
                table#automation.table.table-bordered.table-striped(style='width:100%;margin-top:10px', cellspacing='0')
                    thead
                        tr
                            th
                            th HostName
                            th LoginID
                            th CMD_PREFIX
                            th IFN
                            th CFN
                            th OSType
                            th SID
                            th DBType
                            th AppType
                            th CUSTNAME
                            th LOCATION
                            th HOST_TYPE
                            th ACTION
                    tbody
                        tr

    include log-display.html
    include modals/crud-form.html
    include modals/scheduler.html
    include modals/upload.html
    include modals/uploadFile.html
    include modals/customAction.html
    include modals/customFolder.html
    include modals/contextModal.html
    include modals/sequentialModal.html
    include modals/scheduledJobs.html

block scripts
    script(src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js")
    script(src='/javascripts/user.js')
    script(src='/javascripts/custom-action.js')
    script(src='/javascripts/scheduler.js')

