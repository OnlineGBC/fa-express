extends ../auth-layout

block content
    .login-form
        h2(class="text-center") Register
        if message != ''
            div.alert.alert-danger(role="alert") #{message}
        form(action='/auth/register' method='post')
            div.text-center.top-image
                img.text-center(src='/assets/images/user.png')
            div(class='form-group')
                input(class="form-control" id='fname' type='text' name='fname' placeholder="First Name")
            div(class='form-group')
                input(class="form-control" id='lname' type='text' name='lname' placeholder="Last Name")
            div(class='form-group')
                input(class="form-control" id='email' type='text' name='email' placeholder="Email" required)
            div(class='form-group')
                input(class="form-control" id='password' type='password' name='password' placeholder="Password" required)
            div(class='form-group')
                input(class="form-control" id='c_password' type='password' name='c_password' placeholder="Confirm Password" required)                
            div(class='form-group')
                input(type='submit' value='Register' class="btn btn-primary btn-block")
            .text-center
                a(href="/login") Login 